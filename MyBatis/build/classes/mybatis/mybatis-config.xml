<?xml version="1.0" encoding="UTF-8"?>

<!-- 마이바티스 3 Configuration DTD -->
<!DOCTYPE configuration
  PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-config.dtd">

<!-- 마이바티스 3 설정 항목을 넣는 태그 -->  
<!-- 	최상위 부모 태그 -->
<configuration>

	<!-- 처음 기본에 가는 환경 : default -->	
	<!-- 프로젝트(프로그램)가 접속할 수 있도록 DB정보들을 설정할 수 있다 -->
	<environments default="development">
	
		<!-- 접속할 DB에 대한 정보 -->	
		<environment id="development">
			
			<!-- JDBC를 이용하여 트랜잭션 관리하도록 설정한다 -->
			<transactionManager type="JDBC"></transactionManager>
			
			<!-- DB정보를 설정한다 -->
			<!-- Connection POOL : 미리 DB접속을 여러 개 만들어놓음 -->
			<dataSource type="POOLED">
				<property name="driver" value="oracle.jdbc.driver.OracleDriver"/>
				<property name="url" value="jdbc:oracle:thin:@localhost:1521:xe"/>
				<property name="username" value="scott"/>
				<property name="password" value="tiger"/>
			</dataSource>
		
		</environment>
	
	</environments>
	
		<!-- SQL쿼리들을 작성해둘 마이바티스 매퍼(Mapper) 파일들의 위치를 설정한다 -->
		<mappers>
			<mapper resource="dao/mapper/DeptMapper.xml" />
<!-- 			<mapper resource="dao/mapper/EmpMapper.xml" /> -->
			<!-- 확장자로 읽어오기 때문에 .으로 쓰면 안된다 -->
		</mappers>

</configuration>
